<%= form_for @log do |f| %>    
    <% if @log.errors.any? %>     
        <div id="error_explanation">       
        <h2>         
            <%= pluralize(@log.errors.count, "error") %> prohibited         
            this log from being saved:       
        </h2>       
        <ul>         
            <% @errors.full_messages.each do |msg| %>           
                <li><%= msg %></li>         
            <% end %>       
        </ul>     
    </div>   
<% end %>    

<p>     
    <%= f.label :title %><br>     
    <%= f.text_field :title %>   
</p>    

